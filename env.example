# ClimbAI Telegram Bot + BoulderVision (no AI)
# Скопируйте в .env и заполните значения

# ============================================
# ОБЯЗАТЕЛЬНЫЕ
# ============================================

# Telegram Bot Token (от @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ============================================
# ROBOFLOW (для детекции зацепов)
# ============================================

# API ключ Roboflow (получить на roboflow.com)
ROBOFLOW_API_KEY=your_roboflow_api_key

# Проект и версия модели (опционально)
ROBOFLOW_PROJECT=climbing-holds
ROBOFLOW_MODEL_VERSION=1

# Включить/выключить детекцию зацепов
ENABLE_HOLD_DETECTION=true

# ============================================
# БАЗА ДАННЫХ
# ============================================

# MVP: работаем без базы данных
USE_DATABASE=false

# Режим разработки (true = SQLite локально)
# DEV_MODE=true
# DEV_DATABASE_URL=sqlite:///./climbai.db

# Продакшн БД (для Railway/Heroku)
# DATABASE_URL=postgresql://user:pass@host:port/db

# ============================================
# ЛИМИТЫ
# ============================================

# Лимит бесплатных видео
FREE_VIDEO_LIMIT=3

# Максимальный размер видео (МБ)
MAX_VIDEO_SIZE_MB=100

# Максимальная длительность видео (секунды)
MAX_VIDEO_DURATION_SEC=120

# Таймаут загрузки медиа в Telegram (сек)
MEDIA_UPLOAD_TIMEOUT=1200

# ============================================
# MEDIAPIPE & BOULDERVISION
# ============================================

# Сложность модели MediaPipe (0, 1, 2)
# 2 = самая точная, но медленная
MEDIAPIPE_MODEL_COMPLEXITY=2

# Пропуск кадров (1 = каждый кадр)
FRAME_SKIP=1

# Размер буфера BoulderVision (кадров)
# 60 кадров при 30 FPS = 2 секунды истории
BOULDERVISION_BUFFER_SIZE=60

# Порог сопоставления руки с зацепом (0-1)
BOULDERVISION_HOLD_THRESHOLD=0.1

# ============================================
# ПАРАЛЛЕЛЬНОСТЬ
# ============================================

# Сколько видео обрабатываем параллельно
MAX_CONCURRENT_JOBS=2

# Масса спортсмена (кг) — если известна
MASS_KG=70

# ============================================
# DEPLOYMENT
# ============================================

# Порт для Railway/Heroku
PORT=8080
