# ClimbAI Telegram Bot + BoulderVision (no AI)
# Скопируйте в .env и заполните значения

# ============================================
# ОБЯЗАТЕЛЬНЫЕ
# ============================================

# Telegram Bot Token (от @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ============================================
# ЛИМИТЫ
# ============================================

# Максимальный размер видео (МБ)
MAX_VIDEO_SIZE_MB=100

# Максимальная длительность видео (секунды)
MAX_VIDEO_DURATION_SEC=120

# Таймаут загрузки медиа в Telegram (сек)
MEDIA_UPLOAD_TIMEOUT=1200

# ============================================
# MEDIAPIPE & BOULDERVISION
# ============================================

# Сложность модели MediaPipe (0, 1, 2)
# 2 = самая точная, но медленная
MEDIAPIPE_MODEL_COMPLEXITY=2

# Пропуск кадров (1 = каждый кадр)
FRAME_SKIP=1

# Размер буфера BoulderVision (кадров)
# 60 кадров при 30 FPS = 2 секунды истории
BOULDERVISION_BUFFER_SIZE=60

# ============================================
# ПАРАЛЛЕЛЬНОСТЬ
# ============================================

# Сколько видео обрабатываем параллельно
MAX_CONCURRENT_JOBS=2


# ============================================
# DEPLOYMENT
# ============================================

# Порт для Railway/Heroku
PORT=8080
